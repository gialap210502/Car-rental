@model IEnumerable<Car_rental.Models.discount>

@{
    ViewData["Title"] = "Index";
        Pager pager = new Pager();
    int pageNo = 0;

    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Discount Table</h4>
            <p class="card-description">
                <a asp-action="Create">Create New</a>
            </p>

            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.code)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.percentage)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.startDate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.endDate)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.code)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.percentage)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.startDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.endDate)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.id">Edit</a> |
                                    <a asp-action="Details" asp-route-id="@item.id">Details</a> |
                                    <a asp-action="Delete" asp-route-id="@item.id">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-body">
            <div class="btn-group" role="group" aria-label="Basic example">
                @if (pager.TotalPages > 0)
                {
                    var pre = 1;
                    var next = pager.CurrentPage + 1;
                    <a type="button" class="btn btn-outline-secondary" asp-controller="Discount" asp-action="Discounts"
                        asp-route-pg="@pre">&lt;</a>
                    @for (var pge = pager.StartPage; pge <= pager.EndPage; pge++)
                    {

                        <a type="button" class="btn btn-outline-secondary" asp-controller="Discount" asp-action="Discounts"
                            asp-route-pg="@pge">@pge</a>
                        pre = pge - 1;
                        if (pre == 1 || pre == 0)
                        {
                            pre = 1;
                        }
                        if (next >= pager.EndPage)
                        {
                            next = pager.EndPage;
                        }
                    }
                    <a type="button" class="btn btn-outline-secondary" asp-controller="Discount" asp-action="Discounts"
                        asp-route-pg="@next">&gt;</a>

                }
            </div>
        </div>
    </div>
</div>
