<script>
    function updateHiddenAddress() {
        const streetNumberInput = document.getElementById("street-number").value;
        const streetNameInput = document.getElementById("street-name").value;
        const wardInput = document.getElementById("ward").value;
        const districtInput = document.getElementById("district").value;
        const cityInput = document.getElementById("city").value;
        const provinceInput = document.getElementById("province").value;

        const fullAddress = streetNumberInput + ", " + streetNameInput + ", " + wardInput + ", " + districtInput + ", " + cityInput + ", " + provinceInput;

        const hiddenAddress = document.getElementById("hidden-address");
        hiddenAddress.value = fullAddress;
    }
    document.getElementById("street-number").addEventListener("input", updateHiddenAddress);
    document.getElementById("street-name").addEventListener("input", updateHiddenAddress);
    document.getElementById("ward").addEventListener("input", updateHiddenAddress);
    document.getElementById("district").addEventListener("input", updateHiddenAddress);
    document.getElementById("city").addEventListener("input", updateHiddenAddress);
    document.getElementById("province").addEventListener("input", updateHiddenAddress);
</script>


