          </div>
        </div>
        <div class="row">
				@for (var i = 0; i < ViewBag.relatedCars.Count; i++)
				{
					var carListId = _context.Car.Find(ViewBag.relatedCars[i].id);
					var backgroundImage = "";
					foreach (var image in carListId.images)
					{
						if (image.carId == ViewBag.relatedCars[i].id)
						{
							backgroundImage = image.nameFile;
							break;
						}
					}
				    <div class="col-md-4">
				        <div class="car-wrap rounded ftco-animate">
				            <div class="img rounded d-flex align-items-end" style="background-image: url(/images/@backgroundImage"></div>
				            <div class="text">
				                <h2 class="mb-0"><a href="car-single.html">@ViewBag.relatedCars[i].model</a></h2>
				                <div class="d-flex mb-3">
				                    <span class="cat">@ViewBag.relatedCars[i].brand</span>
				                    <p class="price ml-auto">$300 <span>/day</span></p>
				                </div>
				                <p class="d-flex mb-0 d-block">
				                    <a href="#" class="btn btn-primary py-2 mr-1">Book now</a>
				                    <a href="car-single.html" class="btn btn-secondary py-2 ml-1">Details</a>
				                </p>
