@{
  ViewData["Title"] = "Home Page";
}
@model Car_rental.Models.user
<section class="hero-wrap hero-wrap-2 js-fullheight" style="background-image: url('images/image_1.jpg');"
  data-stellar-background-ratio="0.5">
  <div class="overlay"></div>
  <div class="container">
    <div class="row no-gutters slider-text js-fullheight align-items-end justify-content-start">
      <div class="col-md-9 ftco-animate pb-5">
        <p class="breadcrumbs"><span class="mr-2"><a href="/">Home <i class="ion-ios-arrow-forward"></i></a></span>
          <span>Register <i class="ion-ios-arrow-forward"></i></span>
        </p>
        <h1 class="mb-3 bread">Register</h1>
      </div>
    </div>
  </div>
</section>

<section class="ftco-section contact-section">
  <div class="container">
    <div style="justify-content: center; display: flex;">
      <h2 style="font-size:38px; font-weight:bold">Register</h2>
    </div>
    <div class="row justify-content-center bg-light p-5 contact-form">
      <div class="col-md-8">
        <form asp-action="Register" enctype="multipart/form-data" class="row">
          <span class="text-danger col-md-10">@ViewBag.ErrorMessage</span>
          <div class="col-md-6">
            <div class="mb-2">
              <label class="form-label">Name</label>
              <input name="name" class="form-control" required />
            </div>
            <div class="mb-2">
              <label class="form-label">Phone</label>
              <input name="phone" class="form-control" required />
            </div>
            <div class="mb-2">
              <label class="form-label">Email</label>
              <input name="emailUser" class="form-control" required />
            </div>
            <div class="mb-2">
              <label class="form-label">Address</label>
              <input name="address" class="form-control" required />
            </div>
            <div class="mb-2">
              <label class="form-label">Date of Birth</label>
              <input type="date" name="dob" class="form-control" required />
            </div>
          </div>
          <div class="col-md-6">
            <div class="mb-2">
              <label class="form-label">Avatar</label>
              <input type="file" name="avatar" class="form-control" accept="image/*" />
            </div>
            <div class="mb-2">
              <label class="form-label">Citizen Identification</label>
              <input type="file" name="Id" class="form-control" accept="image/*" />
            </div>
            <div class="mb-2">
              <label class="form-label">Driver License</label>
              <input type="file" name="license" class="form-control" accept="image/*" />
            </div>
            <div class="mb-2">
              <label class="form-label">Password</label>
              <input type="password" name="password" class="form-control" id="password" required />
            </div>
            <div class="mb-2">
              <label class="form-label">Confirm Password</label>
              <input type="password" name="repassword" class="form-control" id="confirmPassword" required />
              <span id="confirmPasswordError" class="text-danger"></span>
            </div>
          </div>
          <label class="form-check-label">
            <input class="form-check-input" type="checkbox" name="remember" required> I agree on the <a href="TermAndCondition">terms and
            conditions</a>.
            <div class="valid-feedback">Valid.</div>
            <div class="invalid-feedback">Check this checkbox to continue.</div>
          </label>
          <div class="col-md-12 text-center" style="padding-top: 15px">
            <button type="submit" id="" class="btn btn-primary btn-block">Register</button>
          </div>
        </form>
      </div>
    </div>
  </div>


</section>
