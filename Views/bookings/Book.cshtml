            value="@ViewBag.totalAmount" readonly />
        </div>
        <span asp-validation-for="totalAmount" class="text-danger"></span>
      </div>
      <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
      </div>
    </form>
