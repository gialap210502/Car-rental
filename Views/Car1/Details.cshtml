                    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" >
  						<ol class="carousel-indicators">
                        	@{
                        	   			// Check if there are any images
    							if (ViewBag.listImages != null && ViewBag.listImages.Count > 0)
    							{
    						    	// The first image will have 'active' class
                        	        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active" style="background-color: #01d28e;"></li>
									var slideIndex = 1; // Initialize the slide index with 1
                        	        for (var j = 1; j < ViewBag.imgCount; j++)
                        	        {
										if(ViewBag.listImages[j].nameFile != "null" || ViewBag.listImages[j].nameFile != null)
										{
											<li data-target="#carouselExampleIndicators" data-slide-to="@slideIndex" style="background-color: #01d28e;"></li>
											slideIndex++;
										}
                        	        }
                        	    }
                        	}
                        </ol>
                        <!-- The slideshow -->
                        <div class="carousel-inner" style="width: 1109px; height: 638px">
                        @{

							// Check if there are any images
    						if (ViewBag.listImages != null && ViewBag.listImages.Count > 0)
    						{
								// Find the index of the first video file (if any)
        						int firstVideoIndex = -1;
        						for (int i = 0; i < ViewBag.listImages.Count; i++)
        						{
        						    if (IsVideoFile(ViewBag.listImages[i].nameFile))
        						    {
        						        firstVideoIndex = i;
        						        break;
        						    }
        						}
								if (firstVideoIndex != -1)
        							{
        							    <div class="carousel-item active">
        							        <div class="video-container" style="width: 1109px; height: 600px;">
        							            <video controls style="border: 1px solid #01d28e; ">
        							                <source src="/images/@ViewBag.listImages[firstVideoIndex].nameFile" type="video/mp4">
        							                Your browser does not support the video tag.
        							            </video>
        							        </div>
        							    </div>
        							}
									else
									{
										// The first image will have 'active' class
    						    		<div class="carousel-item active">
    						    		    <div class="img rounded d-block w-100" style="background-image: url( /images/@ViewBag.listImages[0].nameFile);"></div>
    						    		</div>
									}


    						    // Start looping from second image onwards
    						    for (int i = 1; i < ViewBag.listImages.Count; i++)
