    						        	    <div class="img rounded d-block w-100" style="background-image: url( /images/@ViewBag.listImages[i].nameFile);"></div>
    						        	</div>
									}
    						    }
    						}
								@functions {
    								bool IsVideoFile(string fileName)
    								{
        								// Check if the file extension indicates a video file
        								string extension = System.IO.Path.GetExtension(fileName);
    								    string[] videoExtensions = { ".mp4", ".avi", ".mov" }; // Add more video extensions if needed
    								    return videoExtensions.Contains(extension, StringComparer.OrdinalIgnoreCase);
    								}
								}
                        }
